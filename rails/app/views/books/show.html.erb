<div class="row">
    <div class="col-md-6">
        <div><%= image_tag(@book.image, :class => "book-image") %></div>
        <a><%= link_to "Back", books_path, class: "nav-link back-button" %></a>
    </div>
    <div class="col-md-6">
        <h1><%= @book.title %></h1>
        <h6><%= @book.author %></h6>
        <p><%= @book.description %></p>
        <p> Price: <%= @book.price %> Shipping <%= @book.shipping %></p>
        <p> <%= raw(@book.paypal_link) %></p>
        <% if admin_signed_in? %>
            <p> <%= link_to "edit book", edit_book_path(@book) %></p>
            <p> <%= link_to "delete book", @book, method: :delete, data: { confirm: "Are you sure?" } %></p>
        <% end %>
    </div>
</div>
<div class="row">
    <% @books.each do |book| %>
    <div class="col center">
        <%= link_to image_tag(src=book.image, :class => "book-image-small"), book_path(book) %>
        <h6><%= link_to book.title, book_path(book) %></h6>
        <p><%= book.author %></p>
    </div>
    <% end %>
</div>

