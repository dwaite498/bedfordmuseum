
<%= simple_form_for @book do |f| %>
    <%= f.input :image, as: :file %>
    <%= f.input :title, label: "Book Title", placeholder: 'title' %>
    <%= f.input :author, placeholder: 'author' %>
    <%= f.input :description %>
    <%= f.input :price, label: "Price" %>
    <%= f.input :shipping, label: "Shipping" %>
    <%= f.input :paypal_link, label: "Paypal Link" %>
    <%= f.button :submit, class: "btn-custom2" %>
<% end %>

