<div class="container main-content">
    <div class="container row main-content5">
        <div class="col-md-6">
            <%= image_tag(@book.image_file_name, :alt => @book.title, class:"book-image") %>
        </div>
    
        <div class="col-md-6">
            <h1><%= @book.title %></h1>
            <h6><%= @book.author %></h6>
            <p><%= @book.description %></p>
            <p> Price: <%= @book.price %> Shipping <%= @book.shipping %></p>
