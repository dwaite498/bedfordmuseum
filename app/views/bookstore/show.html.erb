        </div>
    </div>

    
    <div class="container row ">

            <% @booksample.each do |book| %>
                <div class="col-md-4 center">
                    <h4><%= link_to book.title, bookstore_url(book.id) %></a></h4>
                    <p><%= book.author %></p>
                    <%= image_tag(@book.image_file_name, :alt => @book.title, class:"book-image-small") %>
                </div>
            <% end %>

    </div>
</div>