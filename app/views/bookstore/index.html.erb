<h1 class="section-header">Bookstore</h1> 
    <div class="main-content center">
        <% Category.all.each do |category| %>
            <button class="<%= 'active' if params[:category] == category.name %> btn">
                <%= link_to category.name, bookstore_index_path(category: category.name), class: "link" %>
            </button>
        <% end %>
    </div>
<div class="container section-header">
    <div class="container row">
        <% @books.each do |book| %>
            <div class="col-md-3">
                <%= image_tag(book.image_file_name, :alt => book.title, class:"book-image-small") %>
                <h6><%= link_to book.title, bookstore_url(book.id) %></a></h6>
                <p><%= book.author %></p>
                <p class="justify-text"><%= truncate(book.description, length: 60) %></p>
            </div>
        <% end %>
    </div>
</div>