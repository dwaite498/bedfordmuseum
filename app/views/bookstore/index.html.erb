<h1 class="section-header">Bookstore (Under Construction!)</h1> 
<p class="section-header">Categories, search, filter boxes!</p>
<div class="container section-header">
    <div class="container row">
        <% @books.each do |book| %>
            <div class="col-md-3">
                <h6><%= book.title %></h6>
                <p><%= book.author %></p>
                <p class="justify-text"><%= truncate(book.description, length: 60) %></p>
            </div>
        <% end %>
    </div>
</div>
