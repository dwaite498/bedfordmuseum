<div class="container main-content">
    <div class="container row main-content">
        <div class="col-md-6">
            <%= image_tag(@book.image_file_name, :alt => @book.title, class:"book-image") %>
        </div>
    
        <div class="col-md-6">
            <h1><%= @book.title %></h1>
            <h6><%= @book.author %></h6>
            <p><%= @book.description %></p>
            <p> Price: <%= @book.price %> Shipping <%= @book.shipping %></p>
            <p> <%= raw(@book.paypal_link) %></p>
            <p> <%= link_to "edit book", edit_book_path(@book) %></p>
        </div>
    </div>

    
    <div class="container row ">

            <% @booksample.each do |book| %>
                <div class="col-md-3 center">
                    <%= image_tag(@book.image_file_name, :alt => @book.title, class:"book-image-small") %>
                    <h4><%= link_to book.title, book_url(book.id) %></a></h4>
                    <p><%= book.author %></p>
                </div>
            <% end %>

    </div>
</div>