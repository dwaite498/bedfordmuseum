    <div class="container row">
        <div class="col-md-6">
            <a href="javascript:history.back()"><%= image_tag(@book.image_file_name, :alt => @book.title, class:"book-image") %></a>
        </div>
    
        <div class="col-md-6">
            <h1><%= @book.title %></h1>
            <h6><%= @book.author %></h6>
            <p><%= @book.description %></p>
            <p> Price: <%= @book.price %> Shipping <%= @book.shipping %></p>
            <p> <%= raw(@book.paypal_link) %></p>
            <% if current_user_is_admin? %>
                <p> <%= link_to "edit book", edit_book_path(@book) %></p>
                <p> <%= link_to "delete book", @book, method: :delete, data: { confirm: "Are you sure?" } %></p>
            <% end %>
        </div>
    </div>

    
    <div class="container row ">
            <% @booksample.each do |book| %>
                <div class="col-md-3 center">
                    <%= link_to image_tag(@book.image_file_name, :alt => @book.title, class:"book-image-small"), book_url(book.id) %>
                    <h4><%= link_to book.title, book_url(book.id) %></a></h4>
                    <p><%= book.author %></p>
                </div>
            <% end %>
    </div>
